<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ff"
    android:padding="16dp"
    android:gravity="center">

    <!-- Conteneur horizontal pour l'image de login et le titre -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="190dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:contentDescription="Logo Patrimoine-DZ"
            android:src="@drawable/lognii" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Patrimoine-DZ"
            android:textColor="#468C8A"
            android:textSize="28sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Titre dans une CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:cardBackgroundColor="#80D3D3D3"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <TextView
            android:id="@+id/titre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="DISCOVER ALGERIAN HERITAGE"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- Description dans une CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#80D3D3D3"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:text="Access the list of historical and cultural sites in Algeria, classified and to be discovered near you"
            android:textColor="#000000"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

    <!-- Bouton Continuer -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/boutonContinuer"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="32dp"
        android:contentDescription="Continue to explore"
        android:text="Continue"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:backgroundTint="#468C8A"
        app:cornerRadius="12dp"
        app:rippleColor="#80FFFFFF" />

</LinearLayout>