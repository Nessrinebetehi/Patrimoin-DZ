<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Ombre vert-bleu -->
    <item>
        <shape>
            <gradient
                android:type="radial"
                android:centerX="50%"
                android:centerY="50%"
                android:startColor="#CC468C8A"
                android:endColor="#00FFFFFF"
                android:gradientRadius="150dp" />
        </shape>
    </item>
    <!-- Fond transparent avec coins arrondis -->
    <item
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>